<% layout("layouts/boilerplate") %>
<div class="row me-5">
  <div class="card col-8 offset-2">
    <img
      src="https://www.eurekacamping.com/sites/eurekacamping_site/files/tent-camping-at-sunset.jpg"
      class="card-img-top img-fluid"
      alt=""
    />
    <div class="card-body">
      <h4 class="card-title my-2"><%= campground.name %></h4>
      <p class="card-text"><%= campground.description %></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Location: <%= campground.location %></li>
      <li class="list-group-item">Price: $<%= campground.price %></li>
    </ul>
    <div class="card-body d-flex">
      <a
        class="me-3 btn btn-success"
        href="/campgrounds/<%= campground._id %>/edit "
        >Edit</a
      >
      <form
        action="/campgrounds/<%= campground._id %>?_method=DELETE"
        method="POST"
      >
        <button class="btn btn-secondary">Delete</button>
      </form>
    </div>
    <a href="/campgrounds">Back to all campgrounds</a>
  </div>
</div>
